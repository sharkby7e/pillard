<%= turbo_frame_tag dom_id(@pet, :dosing) do %>
  <div class='flex-col w-full font-bold text-4xl text-center space-y-8'>
    <% if @dosed %>
      <p class="text-emerald-700">Yes</p>
      <p class="text-emerald-950 font-normal text-base">You dosed
        <%= @pet.name %>
        at
        <%= @today_dosing.created_at.strftime("%I:%M %P") %>
        <% if @last_dosing_side.present? %>
          on the <%= @last_dosing_side %>
        <% end %>
      </p>
    <% else %>
      <div class="flex-col space-y-4">
        <p class="text-red-600">No</p>
        <% if @last_dosing_side.present? %>
          <p class="text-red-950 text-base">Yesterday <%= @pet.name %> was a <%= @last_dosing_side %>-ear girl</p>
          <%= button_to "Dose #{@pet.name.titleize} on the #{@dosing_side} side", pet_dosings_path(dosing: {side: @dosing_side}), class: "border-1 border-black bg-gray-500 rounded-md border text-lg font-normal text-white p-2 cursor-pointer" %>
        <% else %>
          <%= button_to "Dose #{@pet.name.titleize}", pet_dosings_path(dosing:{side: nil}), class: "border-1 border-black bg-gray-500 rounded-md border text-lg font-normal text-white p-2 cursor-pointer" %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
