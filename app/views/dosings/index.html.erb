<%= turbo_frame_tag @pet, class: "h-full flex flex-col justify-between" do  %>
  <div class="flex flex-col justify-around h-1/2">
    <h1 class="font-bold text-center text-2xl">Has Basil had her pill today?</h1>
    <div class='flex-col w-full font-bold text-4xl text-center space-y-8 -my-16'>
      <% if @dosed %>
        <p class="text-emerald-700">Yes</p>
        <p class="text-emerald-950 font-normal text-base">You dosed basil at <%= @today_dosing.created_at.strftime("%I:%M %P") %></p>
      <% else %>
        <div class="flex-col space-y-4">
          <p class="text-red-600">No</p>
          <%= button_to "Dose Basil", pet_dosings_path, class: "border-1 border-black bg-gray-500 rounded-md border text-lg font-normal text-white p-2"  %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex self-end pb-4">
    <%= link_to pet_path(@pet) do %>
      <%= icon "arrow-path", class: ["size-8"] %>
    <% end %>
  </div>
<% end %>
